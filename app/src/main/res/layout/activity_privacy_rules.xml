<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".OnBoardActivities.PrivacyRules">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_200sdp"
            android:src="@drawable/mylogo"
            android:padding="@dimen/_30sdp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/linearbg"
            android:layout_gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:text="@string/to_continue_please_confirm_that_you_n_read_our_privacy_policy_and_accept_it"
        android:inputType="textMultiLine"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_30sdp"
        android:textSize="@dimen/_15ssp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mylink"
        android:layout_gravity="center"
        android:linksClickable="true"
        android:id="@+id/mylink"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_30sdp"
        android:textSize="@dimen/_20ssp"

        android:clickable="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACCEPT"
        android:background="@drawable/bg2"
        android:backgroundTint="@android:color/white"
        android:layout_gravity="center"
        android:padding="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_30sdp"
        android:fontFamily="@font/carter_one"
        android:onClick="openintent"
        android:clickable="true"
        />
    </LinearLayout>
</LinearLayout>